generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum SymbolNetwork {
  mainnet
  testnet
}

enum UserRole {
  USER
  ADMIN
}

enum AppListingRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                         Int                 @id @default(autoincrement())
  name                       String
  email                      String              @unique
  role                       UserRole            @default(USER)
  passwordHash               String?             @map("password_hash")
  ownInfos                   OwnInfo[]
  sessions                   Session[]
  symbolAccounts             UserSymbolAccount[]
  appListingRequests         AppListingRequest[] @relation("AppListingRequestedBy")
  reviewedAppListingRequests AppListingRequest[] @relation("AppListingReviewedBy")
}

model Session {
  id        String   @id
  userId    Int      @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
}

model UserSymbolAccount {
  id        Int           @id @default(autoincrement())
  userId    Int           @map("user_id")
  network   SymbolNetwork
  publicKey String        @map("public_key")
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, network])
  @@unique([publicKey])
}

model Application {
  id                 Int                 @id @default(autoincrement())
  name               String
  repoUrl            String              @map("repo_url")
  totalCoin          Int                 @map("total_coin")
  ownInfos           OwnInfo[]
  appSymbolAccount   AppSymbolAccount?
  appListingRequests AppListingRequest[]
}

model OwnInfo {
  appId  Int         @map("app_id")
  userId Int         @map("user_id")
  shareCount Int     @default(0) @map("share_count")
  app   Application @relation(fields: [appId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  user  User        @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@id([appId, userId])
}

model AppSymbolAccount {
  applicationId Int         @id @map("application_id")
  address       String
  publicKey     String      @map("public_key")
  privateKey    String      @map("private_key")
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("app_symbol_account")
}

model AppListingRequest {
  id                Int                     @id @default(autoincrement())
  applicationId     Int                     @map("application_id")
  requestedByUserId Int                     @map("requested_by_user_id")
  status            AppListingRequestStatus @default(PENDING)
  reviewedByUserId  Int?                    @map("reviewed_by_user_id")
  reviewedAt        DateTime?               @map("reviewed_at")
  note              String?
  createdAt         DateTime                @default(now()) @map("created_at")
  updatedAt         DateTime                @updatedAt @map("updated_at")
  application       Application             @relation(fields: [applicationId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  requestedByUser   User                    @relation("AppListingRequestedBy", fields: [requestedByUserId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  reviewedByUser    User?                   @relation("AppListingReviewedBy", fields: [reviewedByUserId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  @@index([applicationId])
  @@index([requestedByUserId])
  @@index([reviewedByUserId])
  @@index([status])
  @@map("app_listing_requests")
}
